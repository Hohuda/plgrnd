{
  "peacock.color": "#c2bb2e",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "files.autoSave": "onFocusChange",
  "terminal.integrated.scrollback": 10000,
  "typescript.tsdk": "node_modules/typescript/lib",
  "json.format.enable": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "explorer.sortOrderLexicographicOptions": "upper",
  "jestrunner.jestCommand": "pnpm nx run-many --target='test'",
  "workbench.colorCustomizations": {
    "commandCenter.border": "#15202b99",
    "sash.hoverBorder": "#d5cf4e",
    "statusBar.background": "#c2bb2e",
    "statusBar.foreground": "#15202b",
    "statusBarItem.hoverBackground": "#999324",
    "statusBarItem.remoteBackground": "#c2bb2e",
    "statusBarItem.remoteForeground": "#15202b",
    "titleBar.activeBackground": "#c2bb2e",
    "titleBar.activeForeground": "#15202b",
    "titleBar.inactiveBackground": "#c2bb2e99",
    "titleBar.inactiveForeground": "#15202b99"
  }
}
