{
  "compilerOptions": {
    // strict type check
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true, // can be enabled by strict
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true, // can be enabled by strict
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true, // can be enabled by strict
    "noPropertyAccessFromIndexSignature": false, // concessible, would be nice to have
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true, // strict,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,
    "allowUmdGlobalAccess": false,

    // module
    "baseUrl": "./", // baseUrl path is relative to importing config path
    "module": "esnext",
    "moduleResolution": "nodenext",
    "moduleSuffixes": [""],
    "noResolve": false,
    "paths": {}, // paths are relative to baseUrl
    "resolveJsonModule": true,
    "rootDir": "./",
    // "rootDirs": [], // paths are relative to current file
    // "typeRoots": [], // configured in upper level config
    // "types": [], // configured in upper level config

    //emit

    "declaration": false,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "downlevelIteration": true,
    "emitBOM": false,
    "emitDeclarationOnly": false, // allows to disable ts -> js transpilation, if another transpiler is used
    "importHelpers": true, // tslib runtime required for this to work
    "verbatimModuleSyntax": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "mapRoot": "../../dist/mapRoot", // can be configured for debugging
    // "newLine": "lf",
    "noEmit": true, // if SWC will be used
    "noEmitHelpers": false,
    "noEmitOnError": false,
    "outDir": "./dist", // can be specified in custom build routine
    // "outFile": "", // used only for module none, AMD, System
    "preserveConstEnums": false, // depends on verbatimModuleSyntax
    "preserveValueImports": false, // may be turned on with isolatedModules
    "removeComments": false,
    "sourceMap": true,
    "sourceRoot": "../../dist/sourceRoot", // can be configured for debugging
    "stripInternal": false, // should be disabled in most cases

    // js support
    "allowJs": false,
    "checkJs": false,
    "maxNodeModuleJsDepth": 0, // works only with allowJs enabled

    // editor
    "disableSizeLimit": false,
    "plugins": [],

    // interop
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false, // in case of separate transpiler like SWC
    "preserveSymlinks": false, // needs research

    // language
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "moduleDetection": "auto",
    "noLib": false,
    "target": "esnext",
    "useDefineForClassFields": true,

    // diagnostics
    "diagnostics": true,
    "generateCpuProfile": "profile.cpuprofile",

    // debug diagnostics
    // "explainFiles": true,
    // "extendedDiagnostics": true,
    // "listEmittedFiles": true,
    // "listFiles": true,
    // "traceResolution": true,

    // projects
    "composite": false, // needs research,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false,
    "disableSourceOfProjectReferenceRedirect": false,
    "incremental": false, // relates to composite
    // "tsBuildInfoFile": ".tsbuildinfo", // relates to composite

    // output
    "noErrorTruncation": true,
    "preserveWatchOutput": false,
    "pretty": true

    // nx example
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true,
    // "skipLibCheck": true,
    // "skipDefaultLibCheck": true,
  }
}
